<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="robots" inherit_id="website.robots">
        <xpath expr="t" position="replace">
            <t t-translation="off">
                User-agent: *
                <t t-if="server_env in ('preprod', 'stage')">Disallow: /</t>
                Sitemap:
                <t t-esc="url_root" />
                sitemap.xml
            </t>
        </xpath>
    </template>
</odoo>
